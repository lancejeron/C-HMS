            $('#edit_requirement').on('show.bs.modal', function (event) {
              var button = $(event.relatedTarget)
              var id = button.data('id')
              var name = button.data('name')

              var modal = $(this)
              modal.find('.modal-body #_id').val(id)
              modal.find('.modal-body #_name').val(name)
            });
