extends ../../../templates/navbaradmin.pug

block content
    .right_col(role='main')
        .title_left
            h5
                | Transaction / Settlement / 
                b Settle Request
            .clearfix
            .row
                .col-md-12.col-sm-12.col-xs-12
                    .x_panel
                        br
                        .x_title
                            h1
                                b Settle Request
                        br
                        br
                        .x_panel
                            table#datatable.table.table-striped.table-bordered
                                thead
                                    tr
                                        th ID
                                        th NAME
                                        th REQUEST
                                        th DATE REQUESTED
                                        th DATE OF DEPLOYMENT
                                        th STATUS
                                        th ACTION
                                tbody
                                    each list in listtab
                                        tr
                                            td #{list.intRequestID}
                                            td #{list.strName}
                                            td #{list.strRequestType}
                                            td #{list.datRequestDate}
                                            td #{list.datRequestNeedDate}
                                            td #{list.strRequestStatus}
                                            td
                                                a(href='transaction_client_request_')
                                                    button.btn.btn-info(type='button')
                                                        i.fa.fa-eye
                                                        |   View
                                                button.btn.btn-success(type='button', data-toggle='modal', data-target='#settle', data-id=list.intRequestID)
                                                    i.fa.fa-check
                                                    |   Settle

        #settle.modal.fade.bs-example-modal-sm(tabindex='-1', role='dialog', aria-hidden='true')
            .modal-dialog.modal-sm
                .modal-content
                    form(method='POST' action='transaction_settledecision')
                        .modal-header
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') Ã—
                            h4.modal-title Settle Transaction :
                                i#a
                        .modal-body
                            center
                                h3
                                    b Enter O.R. Number:
                                br
                                input#_id(type="text", name="transid", style='display:none;')
                                input(id='thedate' type='date', name='datesettled' style='display:none;')
                                input#ss(type="text", name="ornum" required)
                        .modal-footer.center
                            button.btn.btn-success(type='submit' name='btn1' value='settle',  onCLick='time();') Ok
