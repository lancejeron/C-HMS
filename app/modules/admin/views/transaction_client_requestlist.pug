    #view_item.modal.fade.bs-example-modal-lg(tabindex='-1', role='dialog', aria-hidden='true')
        .modal-dialog.modal-sm
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal')
                        span(aria-hidden='true') Ã—
                    h4
                        b Number: 
                        i#a
                .modal-body
                    .tile-stats
                        ul
                            li 
                                b Type Of Service:
                                i#b
                            li 
                                b Quantity:
                                i#c
                            li Age:
                            li 
                                b Gender:
                                i#d
                            li 
                                b Educational Attainment:
                                i#e
                            li 
                                b Work Experience:
                                i#f
                            
                