                //- View
                #view.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
                    .modal-dialog.modal-lg
                        .modal-content
                            .modal-header
                                button.close(type='button', data-dismiss='modal')
                                    span(aria-hidden='true') ×
                                h4#myModalLabel.modal-title
                            .modal-body
                //- Add
                .modal.fade.bs-add-modal-lg(tabindex='-1', role='dialog', aria-hidden='true')
                    .modal-dialog.modal-lg
                        .modal-content
                            .modal-header
                                button.close(type='button', data-dismiss='modal')
                                    span(aria-hidden='true') ×
                                h4#myModalLabel.modal-title Add a Staff
                            .modal-body
                               form#demo-form2.form-horizontal.form-label-left(method="POST" action="add_staff")
                                .form-group
                                    label.control-label.col-md-3.col-sm-3.col-xs-12
                                        | First Name 
                                        span.required *
                                    .col-md-6.col-sm-6.col-xs-12
                                        input.form-control.col-md-7.col-xs-12(type='text', required='required', name='firstname')
                                .form-group
                                    label.control-label.col-md-3.col-sm-3.col-xs-12
                                        | Middle Name 
                                    .col-md-6.col-sm-6.col-xs-12
                                        input.form-control.col-md-7.col-xs-12(type='text', name='middlename')
                                .form-group
                                    label.control-label.col-md-3.col-sm-3.col-xs-12
                                        | Last Name 
                                        span.required *
                                    .col-md-6.col-sm-6.col-xs-12
                                        input.form-control.col-md-7.col-xs-12(type='text', required='required', name='lastname')
                                .form-group
                                    label.control-label.col-md-3.col-sm-3.col-xs-12
                                        | Email Address 
                                        span.required *
                                    .col-md-6.col-sm-6.col-xs-12
                                        input.form-control.col-md-7.col-xs-12(type='email', required='required', name='email')
                                .form-group
                                    label.control-label.col-md-3.col-sm-3.col-xs-12
                                        | Password
                                        span.required *
                                    .col-md-6.col-sm-6.col-xs-12
                                        input.form-control.col-md-7.col-xs-12(type='password', required='required', name='password')
                                .form-group
                                    label.control-label.col-md-3.col-sm-3.col-xs-12 Position
                                    .col-md-6.col-sm-6.col-xs-12
                                            select.form-control(name='type')
                                                option(value='Admin') Admin
                                                //- option Staff
                                .ln_solid
                                .form-group
                                    .col-md-6.col-sm-6.col-xs-12.col-md-offset-3
                                        button.btn.btn-warning(type='reset') Reset
                                        button.btn.btn-success(type='submit') Add
                            .modal-footer
                                button.btn.btn-danger(type='button', data-dismiss='modal') Cancel
