                            table#datatable.table.table-striped.table-bordered
                                thead
                                    tr
                                        //- th ID NO.
                                        th NAME
                                        th FEE
                                        th STATUS
                                        th ACTION
                                tbody
                                    each item in itemtab
                                        tr
                                        
                                            //- td #{item.intID}
                                            td #{item.strName}
                                            td #{item.fltFee}
                                            td #{item.strStatus}
                                                //- input.js-switch(type='checkbox', checked='')
                                            td
                                                //- button.btn.btn-info(type='button')
                                                    i.fa.fa-eye
                                                    |   View
                                                button.btn.btn-primary(type='button', id=''+item.intID, name=''+item.strName,data-toggle='modal', data-target='#edit_fee', data-id=item.intID, data-name=item.strName, data-fee=item.fltFee)
                                                    i.fa.fa-edit
                                                    |   Edit
                                                //- if item.strStatus=='Active'
                                                //-     a(href="disable_service/"+item.intID)
                                                //-         button.btn.btn-danger(type='button')
