
extends ../../../templates/navbaradmin.pug

block content
    // page content
    .right_col(role='main')
        div
            .page-title
                .title_left
                    h5
                        | Utilities/&nbsp
                        b Fees
                .row
                    .col-md-12.col-sm-12.col-xs-12
                        .x_panel
