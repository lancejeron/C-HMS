                                                //-         button.btn.btn-danger(type='button')
                                                //-             i.fa.fa-toggle-on
                                                //-             |   Enable
                //- Add
                .modal.fade.bs-add-modal-xs(tabindex='-1', role='dialog', aria-hidden='true')
                    .modal-dialog.modal-xs
                        .modal-content
                            .modal-header
                                button.close(type='button', data-dismiss='modal')
                                    span(aria-hidden='true') ×
                                h4#myModalLabel.modal-title Add a Service
                            .modal-body
                               form#demo-form2.form-horizontal.form-label-left(method="POST" action="add_service")
                                .form-group
                                    label.control-label.col-md-3.col-sm-3.col-xs-12(for='service-name')
                                        | Service Name 
                                        span.required *
                                    .col-md-6.col-sm-6.col-xs-12
                                        input#first-name.form-control.col-md-7.col-xs-12(type='text', required='required', name='servicename')
                                .ln_solid
                                .form-group.pull-right
                                    button.btn.btn-warning(type='reset') Reset
                                    button.btn.btn-success(type='submit') Add
                                    button.btn.btn-danger(type='button', data-dismiss='modal') Cancel
                //- Edit
                #edit_fee.modal.fade.bs-edit-modal-xs(tabindex='-1', role='dialog', aria-hidden='true')
                    .modal-dialog.modal-xs
                        .modal-content
                            .modal-header
                                button.close(type='button', data-dismiss='modal')
                                    span(aria-hidden='true') ×
                                h4#myModalLabel.modal-title Edit Fee
                            .modal-body
                                form#demo-form2.form-horizontal.form-label-left(method="POST" action="")
                                    .form-group
                                        //- label.control-label.col-md-3.col-sm-3.col-xs-12
                                        //-     | ID
                                        //-     span.required *
                                        .col-md-6.col-sm-6.col-xs-12
                                            //- input.form-control.col-md-7.col-xs-12(type='text', id='txt1', required='required', disabled)
                                            input.form-control.col-md-7.col-xs-12(type='text', id='_id', required='required', name='feeid' style="display:none;")                          
                                    .form-group
                                        label.control-label.col-md-3.col-sm-3.col-xs-12
                                            | Fee Name
                                            span.required *
                                        .col-md-6.col-sm-6.col-xs-12
                                            input.form-control.col-md-7.col-xs-12(type='text', id='_name', required='required' disabled)
                                    .form-group
                                        label.control-label.col-md-3.col-sm-3.col-xs-12
                                            | Fee 
                                            span.required *
                                        .col-md-6.col-sm-6.col-xs-12
                                            input.form-control.col-md-7.col-xs-12(type='number', min='0' step='.01', id='_fee', required='required' name='fee')
                                    .ln_solid
                                    .form-group.pull-right
                                        button.btn.btn-success(type='submit') Update
                                        button.btn.btn-danger(type='button', data-dismiss='modal') Cancel

